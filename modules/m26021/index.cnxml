    <para id="id1165283645851">Lees die volgende sinne hardop:</para>
    <figure id="id3738424">
      <media id="id3738424_media" alt="">
        <image mime-type="image/png" src="../../media/graphics2-f0d8.png" id="id3738424__onlineimage" height="40" width="634"/>
      </media>
