        <para id="id4758017">DIE VOËLHOK</para>
        <figure id="id6864403">
          <media id="id6864403_media" alt="">
            <image mime-type="image/png" src="../../media/graphics1-b3cc.png" id="id6864403__onlineimage" height="331" width="430"/>
          </media>
